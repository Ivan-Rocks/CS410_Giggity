{
  "manifest_version": 3,
  "name": "Document Assistant",
  "version": "1.0",
  "description": "Enhance your document reading experience with summarized content and sentiment analysis.",
  "permissions": [
    "activeTab",
    "storage",
    "*://localhost:5000/*"  
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "images/icon.png",
      "48": "images/icon.png",
      "128": "images/icon.png"
    }
  },
  "background": {
    "service_worker": "src/background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/content.js"]
    }
  ],
  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "host_permissions": [
    "*://localhost:5000/*"  
  ]
}
